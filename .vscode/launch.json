{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Web: Next.js",
      "type": "node-terminal",
      "request": "launch",
      "command": "dotenv -- pnpm dev --filter={apps/web}",
      "serverReadyAction": {
        "pattern": "Local:.+ https?://localhost:(.+)",
        "uriFormat": "http://localhost:%s",
        "action": "debugWithChrome"
      }
    },
    {
      "name": "Widgets: Launch Chrome against localhost",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/apps/widgets",
      "request": "launch",
      "command": "pnpm vite",
      "serverReadyAction": {
        "pattern": "Local:.+ https?://localhost(.+)",
        "uriFormat": "http://localhost:%s",
        "action": "debugWithChrome"
      }
    }
  ]
}

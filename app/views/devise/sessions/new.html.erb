<h2><%= title("Log In") %></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-body">
    <%= f.input :email, autocomplete: "email", autofocus: true %>
    <%= f.input :password, autocomplete: "new-password" %>
  </div>

  <div class="flex items-center justify-between">
    <% if devise_mapping.rememberable? %>
      <%= f.input :remember_me, as: :boolean %>
    <% end%>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <div class="text-nowrap text-sm leading-6">
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "font-semibold text-blue-600 hover:text-blue-500" %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
